@model UserAddDto
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">User Management /</span> Add Users
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="All" style="color:red"></div>
                        <div class="form-group">
                            <label asp-for="FirstName" for="defaultFormControlInput" class="form-label">Name</label>
                            <input asp-for=FirstName type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter your name" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" for="defaultFormControlInput" class="form-label">Surname</label>
                            <input asp-for=LastName type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter your surname" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" for="defaultFormControlInput" class="form-label">Email</label>
                            <input asp-for=Email type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter your email" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label">Phone number</label>
                            <input asp-for=PhoneNumber type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter your number" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleId" for="defaultFormControlInput" class="form-label">Role</label>
                            <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(Model.Roles,"Id","Name"))">
                              
                            </select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Password" for="defaultFormControlInput" class="form-label">Password</label>
                            <input asp-for=Password type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter your name" aria-describedby="defaultFormControlHelp">
                        </div>


                        <div class="form-group ">
                            <button type="submit" class="btn btn-primary btn-block ">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </div>
</div>

