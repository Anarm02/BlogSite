@model ArticleDto
<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                       
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="~/stand-blog/assets/images/blog-post-01.jpg" alt="">
                                    </div>
                                    <div class="down-content">
                                        <span>@Model.Category.Name</span>
                                        <a href="*"><h4>@Model.Title</h4></a>
                                        <ul class="post-info">
                                            <li>@Model.User.FirstName @Model.User.LastName</li>
                                            <li>@Model.CreatedDate.ToString("dd/MM/yyyy")</li>
                                            <li><i class="fa-solid fa-eye"></i> @Model.ViewCount</li>
                                        </ul>
                                        <p>@(Model.Content.Length>280 ? Model.Content.Substring(0,280) : Model.Content)... </p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li>@Model.Category.Name</li>
                                                    </ul>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        
                    </div>
                </div>
            </div>
          
        </div>
    </div>
</section>
